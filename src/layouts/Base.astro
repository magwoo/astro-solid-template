---
interface Props {
  title: string;
}

const title = Astro.props.title;
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/tailwind.css" />
    <title>{title}</title>
  </head>
  <body class="text-center p-48">
    <main class="flex flex-col items-center gap-12">
      <slot />
    </main>
  </body>
</html>
